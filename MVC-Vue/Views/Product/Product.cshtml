    <script>
        const app = mount('#app',
             {
                data() {
                  return {
                    drawer: false,
                    selectedColor: null,
                    selectedSize: null,
                    quantity: 1,
                    product: @Html.Raw(Json.Serialize(Model)) 
                  }
                },
                setup() {
                  const tab = Vue.ref(2);
                  return { tab };
                },
                mounted() {
                  console.log("mounted product");
                },
                methods: {
                  addToCart() {
                    console.log("addToCart function");
                    const productToAdd = {
                        ...this.product,
                        quantity: this.quantity,
                        selectedColor: this.selectedColor,
                        selectedSize: this.selectedSize
                    };
                    window.addToCart(productToAdd);
                  },
                  buyNow() {
                      // Buy now logic
                      console.log('Buy now');
                  },
                  chooseMenuItem(){
                    console.log("chooseMenuItem function");
                  }
                }
             },
        );
    </script>
}
